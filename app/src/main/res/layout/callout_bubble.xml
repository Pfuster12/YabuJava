<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/callout_bubble"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_callout_bubble_middle_shadow"
    android:orientation="vertical"
    style="@style/CalloutBubbleStyle"
    android:elevation="4dp">

    <TextView
        android:id="@+id/callout_title_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_tag"
        style="@style/TagStyle"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/callout_title"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Word"
        style="@style/WordTitleStyleCallout" />

    <TextView
        android:id="@+id/callout_reading"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="reading and other stuff that make it bigger"
        style="@style/PoweredJaStyle"
        android:maxLines="1"
        android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:paddingBottom="8dp">

        <ImageView
            android:contentDescription="@string/callout_favorite_button_content_description"
            android:id="@+id/callout_review_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:paddingBottom="4dp"
            android:src="@drawable/star_button"
            android:tint="@color/color500Grey"/>

        <TextView
            android:id="@+id/callout_common_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/common_tag"
            style="@style/TagStyle"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="16dp"
            android:background="@drawable/tag"
            android:layout_gravity="end"
            android:backgroundTint="@color/colorAccent"/>

        <TextView
            android:id="@+id/callout_jlpt_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/JLPTN5"
            style="@style/TagStyle"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="16dp"
            android:background="@drawable/tag"
            android:layout_gravity="end"
            android:backgroundTint="@color/colorJLPTN5"/>
    </LinearLayout>

    <TextView
        android:id="@+id/callout_definition_alone"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1. This is the definition"
        style="@style/PoweredJaStyle"
        android:maxLines="2"
        android:maxWidth="220dp"
        android:ellipsize="end"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/callout_definition_1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1. This is the definition"
        android:maxLines="2"
        android:maxWidth="220dp"
        android:ellipsize="end"
        style="@style/PoweredJaStyle" />

    <TextView
        android:id="@+id/callout_definition_2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2. A second one"
        android:maxWidth="220dp"
        android:maxLines="2"
        android:ellipsize="end"
        style="@style/PoweredJaStyle" />

    <TextView
        android:id="@+id/callout_details_link"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="32dp"
        android:paddingTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/callout_link_details"
        style="@style/PoweredJaStyle"
        android:textColor="@color/colorAccent" />
</LinearLayout>